# Database Configuration
POSTGRES_DB=lodestone
POSTGRES_USER=lodestone
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_PORT=5432
DB_SSLMODE=require

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379

# Application Ports
API_PORT=8080
HTTP_PORT=80
HTTPS_PORT=443

# Storage Configuration
STORAGE_TYPE=local
# For S3 storage, uncomment and configure:
# STORAGE_TYPE=s3
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_ENDPOINT=https://s3.amazonaws.com

# Authentication & Security
JWT_SECRET=your-very-secure-jwt-secret-key-at-least-32-chars
JWT_EXPIRATION=24h
BCRYPT_COST=12

# Application Configuration
LOG_LEVEL=info
LOG_FORMAT=json
CORS_ORIGINS=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPS=100

# Registry Features
REGISTRY_ENABLED_FORMATS=npm,nuget,maven,go,helm,cargo,rubygems,opa
MAX_UPLOAD_SIZE=100MB
