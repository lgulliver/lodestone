<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <PackageId>Lodestone.TestLibrary</PackageId>
    <PackageVersion>1.0.0</PackageVersion>
    <Authors>Lodestone Test</Authors>
    <Description>A test library for validating Lodestone NuGet registry functionality</Description>
    <PackageTags>test;lodestone;nuget</PackageTags>
    <RepositoryUrl>https://github.com/lodestone/test-library</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    
    <!-- Enable symbol package generation -->
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <DebugType>portable</DebugType>
  </PropertyGroup>

</Project>
